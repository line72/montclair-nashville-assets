#!/usr/bin/env bash

# Create tilesets for zoom 0 through 18
for i in $(seq 0 18)
do
    qgis_process run qgis:tilesxyzmbtiles --distance_units=meters --area_units=m2 --ellipsoid=EPSG:7030 --project_path=$(pwd)/world-toner-tiles.qgz --EXTENT='-9730778.5184,-9602136.7070,4264941.0115,4384281.5155 [EPSG:3857]' --ZOOM_MIN=$i --ZOOM_MAX=$i --DPI=96 --BACKGROUND_COLOR='rgba( 0, 0, 0, 0.00 )' --TILE_FORMAT=0 --QUALITY=75 --METATILESIZE=4 --OUTPUT_FILE=$(pwd)/nashville-$i.mbtiles
done;
